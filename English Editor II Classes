		if (child == NULL)
			throw InternalException("CompositeDisplayNode::FirstGlyph: Child is not inline.");
		GlyphRef lastGlyph = child->LastSelectableGlyph();
		if (lastGlyph.IsValid())	
			return lastGlyph;
		}

	return GlyphRef();
}
]]></method>

