		InlineableDisplayNode* child = dynamic_cast<InlineableDisplayNode*>(childNode);
		if (child == NULL)
			throw InternalException("Attempt to layout non-InlineableDisplayNode.");

		child->InlineLayout(layoutContext);
		}
}
]]></method>

