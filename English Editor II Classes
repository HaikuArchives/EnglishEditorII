	if (glyphs->empty())
		return GlyphRef();

	return GlyphRef(this, glyphs->front());
}
]]></method>

<method access="public" mod-time="Wed, 31 Dec 1969 15:59:59 PST"><![CDATA[
GlyphRef LastGlyph()
