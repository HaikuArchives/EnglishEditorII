BlockableDisplayNode* EnclosingLeafBlock()
{
	for (DisplayNode* node = this; node; node = node->Parent()) {
		if (node->GetDisplayType() == Block)
			return dynamic_cast<BlockableDisplayNode*>(node);
		}
	return NULL;
}
